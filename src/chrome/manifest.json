{
  "manifest_version": 3,
  "name": "ker_demo",
  "version": "1.0.0",
  "description": "谷歌插件模板 - vue3 + vite",
  "author": "ker",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "action": {
    "default_icon": "img/icon.png",
    "default_title": "这是林北自己用的插件",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "assets/index.js"
      ]
    }
  ]
}